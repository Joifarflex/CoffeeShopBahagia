@model ProductDto

<form asp-action="ProductDelete">
    <br />
    <div class="container border p-3">Hapus Produk</h1>
        <input hidden asp-for="Id" />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;"> Nama Produk</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ProductName" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">LKategori</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoryName" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Harga</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ProductPrice" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">

                <a asp-action="ProductIndex" class="btn-primary btn form-control ">Kembali</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Buang" class="btn btn-danger form-control" />

            </div>

        </div>

        <div>
        </div>
    </div>
</form>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
